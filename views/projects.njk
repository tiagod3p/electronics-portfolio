{% extends 'layout.njk' %}

{% block title %}
<title>Projetos - Tiago Vidal</title>
{% endblock %}

{% block content %}

<section class="cards">

    {% for item in items %}
        <div class="card">
            <div class="card__image">
                <img src="https://img.youtube.com/vi/{{item.id}}/mqdefault.jpg" alt="">
            </div>

            <div class="card__title">
                {{item.title}}
            </div>

            <div class="card__info">
                <p>{{item.duration}}</p>
                <p class='click' id="{{item.id}}">Clique para ver.</p>
            </div>
        </div>
    {% endfor %}
</section>

<script src="scripts.js"></script>

{% endblock %}